html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none

#timer
  width: 100%
  height: 100%
  line-height: 100%
  background: #000
  color: #fff
  text-align: center
  font-weight: 700
  font-family: century gothic

#ocean
  position: fixed
  inset: 0
  pointer-events: none
  overflow: hidden

#dolphin
  --swim-offset: -100px
  position: absolute
  bottom: 15%
  left: 0
  font-size: 64px
  text-shadow: 0 4px 8px rgba(0, 0, 0, 0.35)
  transform: translateX(var(--swim-offset)) translateY(0)
  animation: bob 1.8s ease-in-out infinite alternate
  transition: transform 0.12s linear

@keyframes bob
  from
    transform: translateX(var(--swim-offset)) translateY(0)
  to
    transform: translateX(var(--swim-offset)) translateY(-10px)

#hide, #toggle, #reset, #min10, #min60, #add10, #add60, #def10, #def30, #def60, #def180, #def300, #def600, #def900, #def1800
  position: absolute
  top: 5px
  left: 50%
  margin-left: -210px
  width: 170px
  height: 44px
  line-height: 30px
